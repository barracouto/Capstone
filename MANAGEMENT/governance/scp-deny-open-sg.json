{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyAllTrafficFromAllSources",
      "Effect": "Deny",
      "Action": [
        "ec2:AuthorizeSecurityGroupIngress"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "ec2:cidr": "0.0.0.0/0"
        },
        "NumericEqualsIfExists": {
          "ec2:FromPort": 0,
          "ec2:ToPort": 65535
        }
      }
    }
  ]
}
